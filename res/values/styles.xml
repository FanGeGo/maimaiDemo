<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NineGameRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/nagivation_bar_text_color_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NineGameWindowTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="anim_view">
        <item name="@android:windowEnterAnimation">@anim/trans</item>
    </style>

    <style name="view_divider_horizontal">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_gray3</item>
    </style>

    <style name="view_divider_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_gray3</item>
    </style>

</resources>